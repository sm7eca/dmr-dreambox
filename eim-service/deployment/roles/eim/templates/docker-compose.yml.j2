version: "3.7"

services:

  eim-core:
    image: smangelsen/eim-core:{{ dmr_release_name }}
    container_name: eim-core
    hostname: eim-core
    ports:
      - "80:80"
    depends_on:
      - eim-mongodb
    networks:
      - backend
      - eim-core
    environment:
      - EIM_DB_HOST
      - EIM_DB_PORT
      - EIM_DB_NAME
      - EIM_DB_USER
      - EIM_DB_PASSWORD
      - "TZ=Europe/Stockholm"

  eim-mongodb:
    image: smangelsen/eim-mongodb:{{ dmr_release_name }}
    container_name: eim-mongodb
    hostname: eim-mongodb
    environment:
      - MONGO_INITDB_ROOT_USERNAME
      - MONGO_INITDB_ROOT_PASSWORD
      - EIM_DB_NAME
      - EIM_DB_USER
      - EIM_DB_PASSWORD
      - TZ=Europe/Stockholm
    networks:
      - backend
    volumes:
      - "mongodb:/data/db"
    restart: unless-stopped

networks:
  eim-core:
  backend:
    internal: true

volumes:
  mongodb:

